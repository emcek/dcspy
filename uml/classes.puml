package aircraft {
  Aircraft <|-- FA18Chornet
  Aircraft <|-- F16C50
  Aircraft <|-- Ka50
  Aircraft <|-- A10C
  A10C <|-- A10C2
  Aircraft <|-- F14B
  Aircraft <|-- AV8BNA
