    + already_pressed = False : bool
    + buttons : Tuple[int]
    + lcd : LcdInfo
    + dislay(message : List[str]) -> List[str]
    + vert_space : int
    # {abstract} _prepare_image() -> Image
    + detecting_plane()
    + load_new_plane(value : str)
    + check_buttons() -> int
    + button_handle(sock : socket)
    + clear()
    + text(List[str])
}

class KeyboardMono {
    + buttons : Tuple[int]
    + vert_space = 10
    # _prepare_image() -> Image
}

class KeyboardColor {
