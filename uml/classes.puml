class IntBuffArgs <<(T,orange)>> {
    + address: int
    + mask: int
    + shift_by: int
}

class StrBuffArgs <<(T,orange)>> {
    + address: int
    + max_length: int
}

class BiosValue <<(T,orange)>> {
    + klass : str
    + args: Union[IntBuffArgs, StrBuffArgs]
    + value: Union[int, str]
    + max_value: int
}

